<AnchorPane id="AnchorPane" prefHeight="600.0" prefWidth="450.0" stylesheets="@../design/design.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="forgotpass.ForgotPasswordController">
   <children>
      <FontAwesomeIconView glyphName="ARROW_LEFT" layoutX="24.0" layoutY="44.0" onMouseClicked="#backToLogin" size="20" />
      <FontAwesomeIconView glyphName="CLOSE" layoutX="423.0" layoutY="43.0" onMouseClicked="#closeApp" size="20" />
      <Label layoutX="96.0" layoutY="63.0" prefHeight="45.0" prefWidth="255.0" text="Forgot Password">
         <font>
            <Font name="System Bold" size="29.0" />
         </font>
      </Label>
      <Label layoutX="115.0" layoutY="112.0" prefHeight="29.0" prefWidth="241.0" text="Recover your password here">
         <font>
            <Font size="15.0" />
         </font>
      </Label>
      <TextField fx:id="accountno" layoutX="83.0" layoutY="216.0" prefHeight="35.0" prefWidth="300.0" promptText="Your Account No" styleClass="filed-decoration" stylesheets="@../design/design.css">
         <font>
            <Font size="18.0" />
         </font>
      </TextField>
      <TextField fx:id="ans" layoutX="83.0" layoutY="350.0" prefHeight="35.0" prefWidth="300.0" promptText="Answer" styleClass="filed-decoration" stylesheets="@../design/design.css">
         <font>
            <Font size="18.0" />
         </font>
      </TextField>
      <ComboBox fx:id="sq" layoutX="83.0" layoutY="283.0" prefHeight="35.0" prefWidth="300.0" promptText="Security Question" styleClass="filed-decoration" stylesheets="@../design/design.css" />
